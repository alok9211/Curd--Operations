import React, { useContext, useEffect, useState } from "react";
import { listContext } from "../App";
import { useLocation, useNavigate } from "react-router-dom";

function AddEmp() {
  const { employeeList, setEmployeList } = useContext(listContext);
  const [isUpadate, setisUpadate] = useState(false);
  const { state } = useLocation();
  const navigate = useNavigate();

  const [formvalue, setFormvalue] = useState({
    Employee_name: "",
    Employee_id: "",
    Designation: "",
    Email: "",
    Education: "",
    Address: "",
    Salary: "",
    Join_date: "",
    performance: "",
  });

  const [formErrors, setFormErrors] = useState({});

  const handlechange = (e) => {
    const { name, value } = e.target;
    setFormvalue({ ...formvalue, [name]: value });
  };

  const validate = () => {
    const errors = {};
    const emailRegex = /^[^\s@]+@[^\s@]+\.[^\s@]+$/;

    if (!formvalue.Employee_name.trim()) {
      errors.Employee_name = "Employee Name is required";
    }
    if (!formvalue.Employee_id.trim()) {
      errors.Employee_id = "Employee ID is required";
    }
    if (!formvalue.Designation.trim()) {
      errors.Designation = "Designation is required";
    }
    if (!formvalue.Email.trim()) {
      errors.Email = "Email is required";
    } else if (!emailRegex.test(formvalue.Email)) {
      errors.Email = "Please enter a valid email";
    }
    if (!formvalue.Education.trim()) {
      errors.Education = "Education is required";
    }
    if (!formvalue.Address.trim()) {
      errors.Address = "Address is required";
    }
    if (!formvalue.Salary.trim()) {
      errors.Salary = "Salary is required";
    }
    if (!formvalue.Join_date.trim()) {
      errors.Join_date = "Join Date is required";
    }
    if (!formvalue.performance.trim()) {
      errors.performance = "Performance selection is required";
    }

    setFormErrors(errors);
    return Object.keys(errors).length === 0;
  };

  const handlesubmit = (e) => {
    e.preventDefault();

    if (!validate()) {
      return;
    }

    if (!isUpadate) {
      setEmployeList([...employeeList, formvalue]);
      setFormvalue({
        Employee_name: "",
        Employee_id: "",
        Designation: "",
        Email: "",
        Education: "",
        Address: "",
        Salary: "",
        Join_date: "",
        performance: "",
      });
    } else {
      const updating = employeeList.map((item, index) => {
        return index === state?.ind ? { ...item, ...formvalue } : item;
      });
      setEmployeList(updating);
      setisUpadate(false);
      navigate("/");
    }
  };

  useEffect(() => {
    if (state?.data) {
      setisUpadate(true);
      setFormvalue({ ...state?.data });
    }
  }, [state?.data]);

  return (
    <div className="container-fluid">
      <div className="row mt-4">
        <div className="col-12">
          <div className="card">
            <div className="card-header">
              <h4 className="m-0">{isUpadate ? "UPDATE EMPLOYEE" : "ADD EMPLOYEE"}</h4>
            </div>
            <div className="card-body">
              <form onSubmit={handlesubmit}>
                <div className="row row-gap-3">

                  {/* Employee Name */}
                  <div className="col-3">
                    <label className="font-size-12">EMPLOYEE NAME</label>
                    <input
                      type="text"
                      className="form-input"
                      name="Employee_name"
                      value={formvalue.Employee_name}
                      onChange={handlechange}
                    />
                    {formErrors.Employee_name && (
                      <small className="text-danger">{formErrors.Employee_name}</small>
                    )}
                  </div>

                  {/* Employee ID */}
                  <div className="col-3">
                    <label className="font-size-12">EMPLOYEE ID</label>
                    <input
                      type="text"
                      className="form-input"
                      name="Employee_id"
                      value={formvalue.Employee_id}
                      onChange={handlechange}
                    />
                    {formErrors.Employee_id && (
                      <small className="text-danger">{formErrors.Employee_id}</small>
                    )}
                  </div>

                  {/* Designation */}
                  <div className="col-3">
                    <label className="font-size-12">DESIGNATION</label>
                    <input
                      type="text"
                      className="form-input"
                      name="Designation"
                      value={formvalue.Designation}
                      onChange={handlechange}
                    />
                    {formErrors.Designation && (
                      <small className="text-danger">{formErrors.Designation}</small>
                    )}
                  </div>

                  {/* Email */}
                  <div className="col-3">
                    <label className="font-size-12">EMAIL</label>
                    <input
                      type="text"
                      className="form-input"
                      name="Email"
                      value={formvalue.Email}
                      onChange={handlechange}
                    />
                    {formErrors.Email && (
                      <small className="text-danger">{formErrors.Email}</small>
                    )}
                  </div>

                  {/* Education */}
                  <div className="col-3">
                    <label className="font-size-12">EDUCATION</label>
                    <input
                      type="text"
                      className="form-input"
                      name="Education"
                      value={formvalue.Education}
                      onChange={handlechange}
                    />
                    {formErrors.Education && (
                      <small className="text-danger">{formErrors.Education}</small>
                    )}
                  </div>

                  {/* Address */}
                  <div className="col-3">
                    <label className="font-size-12">ADDRESS</label>
                    <input
                      type="text"
                      className="form-input"
                      name="Address"
                      value={formvalue.Address}
                      onChange={handlechange}
                    />
                    {formErrors.Address && (
                      <small className="text-danger">{formErrors.Address}</small>
                    )}
                  </div>

                  {/* Salary */}
                  <div className="col-3">
                    <label className="font-size-12">SALARY</label>
                    <input
                      type="text"
                      className="form-input"
                      name="Salary"
                      value={formvalue.Salary}
                      onChange={handlechange}
                    />
                    {formErrors.Salary && (
                      <small className="text-danger">{formErrors.Salary}</small>
                    )}
                  </div>

                  {/* Performance */}
                  <div className="col-3">
                    <label className="font-size-12">PERFORMANCE</label>
                    <select
                      className="form-input"
                      name="performance"
                      value={formvalue.performance}
                      onChange={handlechange}
                    >
                      <option value="">Select</option>
                      <option value="normal">NORMAL</option>
                      <option value="average">AVERAGE</option>
                      <option value="excellent">EXCELLENT</option>
                    </select>
                    {formErrors.performance && (
                      <small className="text-danger">{formErrors.performance}</small>
                    )}
                  </div>

                  {/* Submit */}
                  <div className="col-12 d-flex justify-content-end">
                    <button className="btn btn-primary" type="submit">
                      {isUpadate ? "UPDATE" : "SUBMIT"}
                    </button>
                  </div>

                </div>
              </form>
            </div>
          </div>
        </div>
      </div>
    </div>
  );
}

export default AddEmp;
